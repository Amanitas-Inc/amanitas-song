    "compileOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node"
    },
    "exclude": ["node_modules"]
